<h1 class="page_title">List Tasks</h1>

<table id="example" class="table table-striped table-bordered" style="width:100%">
  <thead>
  <tr>
    <th>Name</th>
    <th>Due Date</th>
    <th>Complete?</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= date_to_str(task.due_at) %></td>
        <td><%= task.complete %></td>
        <td>
          <%= link_to 'Show', list_task_path(@list, task), class: "btn btn-primary" %>
          <%= link_to 'Edit', edit_list_task_path(@list, task), class: "btn btn-warning" %>
          <%= link_to 'Destroy', list_task_path(@list, task), method: :delete, confirm: 'Are you sure?', class: "btn btn-danger" %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>


<br/>
<%= link_to 'Back', lists_path, class: "btn btn-danger"  %>
<%= link_to 'New Task', new_list_task_path(@list), class: "btn btn-secondary float-right"  %>

<script type="application/javascript">
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>

