<h1 class="page_title">Lists</h1>

<table id="example" class="table table-striped table-bordered" style="width:100%">
  <thead>
  <tr>
    <th>Title</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @lists.each do |list| %>
      <tr>
        <td><%= list.title %></td>
        <td>
          <%= link_to 'Show', list, class: "btn btn-primary" %>
          <%= link_to 'Edit', edit_list_path(list), class: "btn btn-warning" %>
          <%= link_to 'Destroy', list, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger" %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New List', new_list_path, class: "btn btn-secondary" %>

<script type="application/javascript">
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script> 